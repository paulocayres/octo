<div class="container">
	<!-- if galleries -->
	{{#if portfolios}} {{#each portfolios}}
	<h2>{{name}}
	</h2>
	<div class="row gallery-images">
		{{#if heroImage}}
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 gallery-image">
			<img src="{{cloudinaryUrl heroImage width='1280' height='622'}}" class="img-rounded">
		</div>
		{{/if}}
		<div class="row">
			{{#each images}}
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 gallery-image">
				<img src="{{cloudinaryUrl width='1280' height='622'}}" class="img-rounded">
			</div>
			{{/each}}
		</div>
	</div>
	{{/each}} {{else}}
	<!-- else -->
	<h3 class="text-muted">Ainda não existe portfólio cadastrado.</h3>
	{{/if}}
</div>
