<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-2 col-lg-2 sidebar">
			<div class="categoria">
				<h2>Categorias:</h2>
				<div style="margin-top: 8px;" class="list-group ">
					<a href="/servico" class="caption list-group-item">Todas as Categorias</a>
					{{# each data.categorias }}
					<a href="{{servicoCategoryUrl key}}" class="false list-group-item">{{name}}</a>
					{{/each}}
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
			<h2 class="evento">Servi√ßos:</h2>
			<div class="row display-flex">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

					<div id="myCarousel" class="carousel slide" data-ride="carousel" style="position:relative;z-index:1;">
						<!-- Indicators -->
						<ol class="carousel-indicators" style="z-index:1">
							{{#each data.servicos.results}}
							<li data-target="#myCarousel" data-slide-to="0" {{#if @first}} class="active" {{/if}}></li>
							{{/each}}
						</ol>

						<div class="carousel-inner" role="listbox">
							{{#each data.servicos.results}}
							<div class="item {{#if @first}}active{{/if}}">
								{{#if image}}
								<img src="{{{cloudinaryUrl image}}}" style="width:100%;">{{/if}}
								<div class="carousel-caption">
									<h3>{{{content.brief}}}</h3>
									<p>{{{content.extended}}}</p>
								</div>
							</div>
							{{/each}}
						</div>

						<!-- Left and right controls -->
						<a class="left carousel-control" href="#myCarousel" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="right carousel-control" href="#myCarousel" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
