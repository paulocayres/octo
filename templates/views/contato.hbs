<div class="container">
	<h2>Entre em Contato:</h2>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if contatoSubmitted}}
			<h3>Contato realizado com sucesso.</h3>
			<h3>Obrigado.</h3>
			{{else}}

			<form method="post" id="myForm" name="myForm">
				<input type="hidden" name="action" value="contato">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Nome</label>
					<input type="text" name="name.full" class="form-control" value="{{formData.[name.full]}}">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" class="form-control" value="{{formData.email}}">
				</div>
				<div class="form-group">
					<label>Telefone</label>
					<input type="text" name="phone" placeholder="(opcional)" class="form-control" value="{{formData.phone}}">
				</div>
				<div class="form-group {{#if validationErrors.contatoType}}has-error{{/if}}">
					<label>Motivo do Contato</label>
					<select name="contatoType" class="form-control">
						<option value="">(Selecione um)</option>
						{{#each contatoTypes}}
						<option value="{{value}}">{{label}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<label>Mensagem</label>
					<textarea name="message" placeholder="Deixe aqui sua mensagem." rows="4" class="form-control">{{formData.message}}</textarea>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Enviar</button>
				</div>
			</form>
			{{/if}}
		</div>
	</div>
</div>
