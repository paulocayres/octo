<div class="container" >
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-2 col-lg-2">
			<div>
				<h2>Categorias:</h2>
				<div style="margin-top: 15px;" class="list-group ">
					<a href="/parcblog" class="caption list-group-item">Todas as Categorias</a>
						{{# each data.categories }}
						<a href="{{parcCategoryUrl key}}" class="false list-group-item">{{name}}</a>
						{{/each}}
				</div>
			</div>
		</div>

		<div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
			<h2 class="evento">Parceiros:</h2>
		</div>

		{{# each data.parcs.results}}
		<div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
			<div class="thumbnail">
				<div class="caption list-group-item">
					<h3>{{{title}}}</h3>
				</div>
				{{#if image}}<img src="{{{cloudinaryUrl image}}}">{{/if}}
				<div class="cardbottom">
					<h3>{{{content.brief}}}</h3>
					<h4>{{{content.extended}}}</h4>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
	{{>parcpagination}}
</div>

